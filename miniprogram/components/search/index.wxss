@import '../common/index.wxss';

.van-search {
  display: -webkit-flex;
  display: flex;
  padding: 14rpx 30rpx;
  -webkit-align-items: center;
  align-items: center;
  box-sizing: border-box;
}

.van-search__field {
  -webkit-flex: 1;
  flex: 1;
  border-radius: 8rpx;
}

.oled .van-search__field {
  border: thin solid rgba(255, 255, 255, 0.5);
}

.dark .van-search__field {
  border: thin solid rgba(255, 255, 255, 0.5);
}

.light .van-search__field {
  border: thin solid rgba(0, 0, 0, 0.5);
}

.van-search__field__left-icon {
  color: #999;
}

.van-search--show-action {
  padding-right: 0;
}

.van-search input::-webkit-search-cancel-button,
.van-search input::-webkit-search-decoration,
.van-search input::-webkit-search-results-button,
.van-search input::-webkit-search-results-decoration {
  display: none;
}

.van-search__action {
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  color: #666;
}

.van-search__action:active {
  background-color: #e8e8e8;
}
