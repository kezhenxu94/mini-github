@import '../../style/base.wxss';

page {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 100vh;
  background-color: #333;
  font-size: 15px;
}

.item {
  line-height: 2.2em;
  background: #24292e;
  padding: 10rpx 30rpx 20rpx;
  box-sizing: border-box;
}

.item:not(:last-of-type) {
  margin-bottom: 20rpx;
}

.item .title {
  color: #eee;
  margin: 26rpx 0;
}

.item .i {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  position: relative;
  padding-bottom: 16rpx;
  word-break: break-all;
}

.i .icon {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 2.2em;
}

.i image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.item .text {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

.item .btn {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 100%;
  top: 0;
  left: 1;
  opacity: 0;
}

.footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 80rpx;
  font-size: 24rpx;
  color: #eee;
}
