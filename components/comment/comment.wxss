@import '../../lib/wxParse/wxParse.wxss';

.comment {
  padding: 20rpx 30rpx;
  color: #fff;
}

.header {
  display: flex;
  align-items: center;
  height: 120rpx;
}

.author-time {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.user {
  margin-left: 10rpx;
  padding: 0 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  min-width: 100rpx;
  min-height: 100rpx;
  border-radius: 50%;
}

.time {
  color: rgb(175, 175, 175);
  font-size: 28rpx;
  padding-right: 20rpx;
}

.reply {
  width: 50rpx;
  height: 50rpx;
}

modal {
  color: #000;
}

.body {
  font-size: 28rpx !important;
  line-height: 48rpx !important;
}

.wxParse-pre {
  margin: 8rpx 0 !important;
  border: 1rpx dashed #eee;
  border-radius: 8rpx !important;
}

.wxParse-code .wxParse-inline {
  border: 1rpx dashed #eee;
  border-radius: 8rpx !important;
}

.wxParse-code, .wxParse-wxxxcode-style {
  background-color: transparent !important;
  color: #eee !important;
  line-height: inherit !important;
  padding: 0 8rpx;
}

.wxParse-blockquote {
  background: #000 !important;
  padding:10rpx !important;
}

.wxParse-inline:not(:first-of-type) {
  margin-left: 10rpx !important;
}

.wxParse-p > .wxParse-img {
  width: 100% !important;
}

.wxParse-pre .wxParse-code .wxParse-inline {
  display: block !important;
  width: 100% !important;
  border: none !important;
}